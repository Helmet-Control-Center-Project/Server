<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.helmetproject.mapper.HelmetMapper">
    <!--  헬멧 등록  -->
    <insert id="infoInsert" parameterType="com.example.helmetproject.dto.User">
        INSERT INTO helmets (
            helmet_id,
            helmet_name,
            helmet_make_date,
            helmet_buy_date,
            helmet_price
        )
        values (#{helmetId},
                #{helmetModelName},
                #{helmetMakeDate},
                #{helmetBuyDate},
                #{helmetPrice}
               )
    </insert>

    <select id="getHelmetData" parameterType="com.example.helmetproject.dto.User" resultType="java.util.HashMap">
        SELECT *
        FROM helmets
    </select>

</mapper>